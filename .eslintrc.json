{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb", "plugin:react/jsx-runtime"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "never"],
    "comma-dangle": "off",
    "object-curly-newline": "off",
    "arrow-parens": "off",
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/jsx-no-bind": [
      1,
      {
        "ignoreDOMComponents": true,
        "allowFunctions": true,
        "allowArrowFunctions": true
      }
    ]
  }
}
